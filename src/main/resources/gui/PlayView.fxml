<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guiClasses.controller.PlayViewController">
   <children>
      <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="-6.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="6.0">
         <children>
            <Label fx:id="labelShowPoints">
               <VBox.margin>
                  <Insets right="140.0" top="110.0" />
               </VBox.margin></Label>
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="-6.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="6.0">
         <children>
            <HBox alignment="CENTER" prefHeight="10.0" prefWidth="600.0">
               <children>
                  <Label text="PALAVRA: " />
                  <Label fx:id="labelFullWord">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="13.0" prefWidth="600.0">
               <children>
                  <TextField fx:id="tfAnswerWrite" alignment="CENTER" focusTraversable="false" promptText="E-XEM-PLO" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <VBox alignment="CENTER" prefHeight="45.0" prefWidth="600.0">
               <children>
                  <Button fx:id="btAnswer" mnemonicParsing="false" onAction="#onBtAnswerAction" text="RESPONDER" />
               </children>
            </VBox>
         </children></VBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Button fx:id="btBackArrow" mnemonicParsing="false" onAction="#onBtBackArrowAction">
               <VBox.margin>
                  <Insets left="10.0" top="20.0" />
               </VBox.margin></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
