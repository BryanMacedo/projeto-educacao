<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guiClasses.controller.PlayViewController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="-6.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="6.0">
         <children>
            <Label text="PALAVRA: EXEMPLO">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="13.0" prefWidth="600.0">
               <children>
                  <TextField focusTraversable="false" promptText="E-XEM-PLO" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <VBox alignment="CENTER" prefHeight="45.0" prefWidth="600.0">
               <children>
                  <Button mnemonicParsing="false" text="RESPONDER" />
               </children>
            </VBox>
         </children></VBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Button fx:id="btBackArrow" mnemonicParsing="false" onAction="#onBtBackArrowAction">
               <VBox.margin>
                  <Insets left="10.0" top="20.0" />
               </VBox.margin></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
