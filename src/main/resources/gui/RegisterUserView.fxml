<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guiClasses.controller.RegisterUserViewController">
   <children>
      <Button fx:id="buttonBackArrow" mnemonicParsing="false" onAction="#onButtonBackArrowAction">
         <VBox.margin>
            <Insets left="10.0" top="20.0" />
         </VBox.margin></Button>
      <HBox prefHeight="69.0" prefWidth="600.0">
         <children>
            <Label text="TIPO DE USUÃRIO">
               <HBox.margin>
                  <Insets left="20.0" top="35.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <RadioButton fx:id="rbStudent" mnemonicParsing="false" text="ALUNO">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" top="35.0" />
               </HBox.margin>
               <toggleGroup>
                  <ToggleGroup fx:id="toggleGroupUsers" />
               </toggleGroup>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="rbTeacher" mnemonicParsing="false" text="PROFESSOR" toggleGroup="$toggleGroupUsers">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" top="35.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </RadioButton>
         </children>
      </HBox>
      <HBox prefHeight="42.0" prefWidth="600.0">
         <children>
            <Label text="NOME">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TextField>
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="38.0" prefWidth="600.0">
         <children>
            <Label text="DATA DE NASCIMENTO">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <DatePicker>
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </DatePicker>
         </children>
      </HBox>
      <HBox prefHeight="31.0" prefWidth="600.0">
         <children>
            <Label text="SEXO">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <RadioButton mnemonicParsing="false" text="MENINO">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="toggleGroupSex" />
               </toggleGroup>
            </RadioButton>
            <RadioButton mnemonicParsing="false" text="MENINA" toggleGroup="$toggleGroupSex">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </RadioButton>
         </children>
      </HBox>
      <VBox alignment="CENTER">
         <children>
            <Button alignment="CENTER" mnemonicParsing="false" text="CADASTRAR" />
         </children>
      </VBox>
   </children>
</VBox>
